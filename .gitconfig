[core]
#	excludesfile = /home/abashkin/.gitignore_global
	autocrlf   = input
	safecrlf   = true
	whitespace = fix, -indent-with-non-tab, trailing-space, cr-at-eol
	pager      = more


[alias]
	st        = status --short
	stu       = status --untracked-files=no
	ci        = commit
	cia       = commit --allow-empty-message
	br        = branch
	co        = checkout
	df        = diff
	lg        = log -p
#	revert    = checkout --
	go        = !gitgo
	hist      = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type      = cat-file -t
	dump      = cat-file -p
	conflicts = !git ls-files --unmerged | cut -f2 | sort -u | xargs grep -El '<<<<<<<|=======|>>>>>>>'
	unmerged  = !git ls-files --unmerged | cut -f2 | sort -u


[color]
	diff   = true
	grep   = true
	status = true
	ui     = true

	[color "branch"]
		current = yellow reverse
		local   = yellow
		remote  = green

	[color "diff"]
		meta       = normal
		frag       = magenta bold
		old        = red bold
		new        = blue bold
		whitespace = red reverse

	[color "status"]
		added      = yellow
		changed    = green
		untracked  = cyan


[diff]
	renames = copy
